{% extends ["main.html.twig", "@Common/main.html.twig"] %}

{% block title %}{{ 'idp_exchange.clear.label'|trans }}{% endblock %}

{% block content %}
    {{ form_start(form) }}
    {{ form_widget(form) }}

    <div class="buttons">
        <button type="submit" class="btn btn-sm btn-danger">
            <i class="fa fa-trash"></i> {{ 'actions.confirm'|trans }}
        </button>

        <a href="{{ path('idp_exchange_admin') }}" class="btn btn-sm btn-secondary">
            {{ 'actions.cancel'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}