{% extends ["main.html.twig", "@Common/main.html.twig"] %}

{% block title %}{{ 'idp_exchange.label'|trans }}{% endblock %}

{% block content %}
    <div class="bs-callout bs-callout-info">
        <h4>{{ 'label.info'|trans }}</h4>
        <p>{{ 'idp_exchange.status'|trans({'%users%': count})|raw }}</p>
    </div>

    <div class="card">
        <table class="table table-bordered table-hover table-striped">
            <colgroup>
                <col />
                <col class="col-md" />
            </colgroup>

            <thead>
            <tr>
                <th>{{ 'idp_exchange.username'|trans }}</th>
                <th>{{ 'idp_exchange.time'|trans }}</th>
            </tr>
            </thead>

            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.username }}</td>
                    <td>{{ user.dateTime|format_date }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    {% include '@Common/includes/pagination.html.twig' with {
        currentPage: page,
        currentFilters: {},
        paginationPath: 'idp_exchange_admin',
        lastPage: pages,
        showAlwaysFirstAndLast: true
    } only %}

    <div class="buttons">
        <a href="{{ path('idp_exchange_clear_admin') }}" class="btn btn-sm btn-danger">
            <i class="fa fa-trash"></i> {{ 'idp_exchange.clear.label'|trans }}
        </a>
    </div>
{% endblock %}